{
  "mcpServers": {
    "markitdown": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "markitdown-mcp-local"
      ]
    },
    "memory": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-v",
        "claude-memory:/app/dist",
        "mcp-memory-local"
      ]
    },
    "time": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "mcp-time-local"
      ]
    },
    "sequentialthinking": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "mcp-sequentialthinking-local"
      ]
    }
  }
}
